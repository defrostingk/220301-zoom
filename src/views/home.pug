doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.0/css/all.min.css")
        link(rel="stylesheet", href="/public/css/styles.css")
        link(rel="preconnect" href="https://fonts.googleapis.com")
        link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
        link(href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400&display=swap" rel="stylesheet")
        title Zzoom | Video Call & Chat Service
        link(rel="shortcut icon" type="image/x-icon" href="https://raw.githubusercontent.com/defrostingk/220301-zoom/main/src/public/images/favicon.ico")
    body
        header
            a#logo(href="") 
                i.fa-solid.fa-video.fa-lg
                label(for="logo") Zzoom
        main
            //- Home
            div#home.home
                div.submit
                    div#saveNickname.submit__user
                        form
                            input.submit__text#nickname(placeholder="nickname", required, type="text", maxlength='12')
                            div.submit__mike
                                input#mikeOff(type="checkbox")
                                label(for="mikeOff") Mike Off
                            div.submit__camera
                                input#cameraOff(type="checkbox")
                                label(for="cameraOff") Camera Off
                            button Save
                    div#enterRoom.submit__room
                        div.submit__alert
                            span Please save your nickname first.
                        form
                            input.submit__text#roomName(placeholder="room name", required, type="text", maxlength='20')
                            button(disabled) Enter Room
                div.room-list
                    span Open Rooms
                    ul#roomList
            //- Call
            div#call.call
                div.call__area
                    div.video__wrapper
                        div.video
                            div.video__face
                                video.video__my-video#myFace(autoplay, playsinline, width="400", height="400", muted)
                                span.video__my-name
                            div.video__face
                                video.video__peer-video#peerFace(autoplay, playsinline, width="400", height="400")
                                span.video__peer-name
                            div#device.video__device
                                div.video__mike
                                    select#mikes
                                    button#muteBtn Mute
                                div.video__camera
                                    select#cameras
                                    button#cameraBtn Turn Camera Off
                    div.chat__wrapper
                        div#chat.chat
                            div#callHeader.chat__header
                                span.chat__room-name
                                span.chat__room-description
                                form(action="").chat__close
                                    button Close
                            ul.chat__text
                            form#message.chat__send
                                input(placeholder="message", required, type="test")
                                button Send

        footer 
            span &copy; 2022. defrostingk All rights reserved.
            a(href="https://github.com/defrostingk", target="_blank", title="defrostingk") 
                i.fa-brands.fa-github

        script(src="/socket.io/socket.io.js")
        script(src="/public/js/app.js")