doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title ZZoom
        link(rel="stylesheet", href="https://unpkg.com/mvp.css")
    body 
        header
            h1 ZZoom
            h3 
        main 
            div#welcome
                form
                    input#nickName(placeholder="nickname",required, type="text")
                    input#roomName(placeholder="room name",required, type="text")
                    button Enter Room
            div#call
                div#myStream
                    video#myFace(autoplay, playsinline, width="400", height="400", muted)
                    button#mute Mute
                    button#camera Turn Camera Off
                    video#peerFace(autoplay, playsinline, width="400", height="400")
                    div#device
                        select#cameras
                        select#mikes
                div#chat
                    h3 Chat
                    ul
                    form
                        input#message(placeholder="message", required, type="test")
                        button Send

        script(src="/socket.io/socket.io.js")
        script(src="/public/js/app.js")